<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedCorners">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Style.App.circleImageView" parent="">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.circleImageView</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light"></style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:colorAccent">#808080</item>
        <item name="android:textColor">#B00020</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorButtonNormal">#000000</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="PositiveButtonStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#F8F8F8</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">#B00020</item>
    </style>

</resources>