<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#E3E2DD"
    app:cardCornerRadius="15dp"
    app:contentPadding="10dp">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/popup_window_frame"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_window_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/popup_title_rounded_background"
        android:text="Warning"
        android:textColor="#FFFFFF"
        android:backgroundTint="#B00020"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/delete_popup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:text="Are you sure you want to delete this ingredient?"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/delete_popup_no_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="0dp"
            android:layout_weight="1"
            android:backgroundTint="#FF6A6667"
            android:text="No" />

        <Button
            android:id="@+id/delete_popup_yes_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="0dp"
            android:layout_weight="1"
            android:backgroundTint="#B00020"
            android:text="Yes" />
    </TableRow>

    </LinearLayout>
</androidx.cardview.widget.CardView>